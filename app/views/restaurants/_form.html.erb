<%= form_for @restaurant, :url => restaurants_path, :html => { :multipart => true } do |f| %>
  <% if @restaurant.errors.any? %>
   
    <div id="error_explanation" class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>

      <h4><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h4>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "XYZ Restaurant" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address , class: "form-control", placeholder: "350 Fifth Avenu" %>
  </div>
  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone, class: "form-control", placeholder: "(925) 123-4567"  %>
  </div>
  <div class="form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website,  class: "form-control", placeholder: "http://www.fakewebsite.com"  %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city,  class: "form-control", placeholder: "San Francisco" %>
  </div>
  <div class="form-group">
    <%= f.label :country %><br>
    <%= f.text_field :country,  class: "form-control", placeholder: "USA"  %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image,  class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
